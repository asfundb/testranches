    },
    {
      "type": "text",
      "id": "view_all_text",
      "label": "View All text",
      "default": "View All Brands"
    },
    {
      "type": "url",
      "id": "view_all_link",
      "label": "View All link"
    }
  ],
  "blocks": [
    {
      "type": "brand",
      "name": "Brand",
      "settings": [
        {
          "type": "text",
          "id": "brand_name",
          "label": "Brand Name",
          "default": "Brand Name"
        },
        {
          "type": "text",
          "id": "brand_subtext",
          "label": "Brand Subtext",
          "default": "Brand Type"
        },
        {
          "type": "image_picker",
          "id": "logo_image",
          "label": "Logo Image"
        },
        {
          "type": "color",
          "id": "logo_background_color",
          "label": "Logo Background Color",
          "default": "#000000"
        },
        {
          "type": "url",
          "id": "vendor_link",
          "label": "Vendor Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Brand Grid",
      "blocks": [
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        },
        {
          "type": "brand"
        }
      ]
    }
  ]
}
{% endschema %}
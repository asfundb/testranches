
<hr class="section-spacer__divider" style="border-top: 1px solid {{ section.settings.divider_color }}; margin: {{ section.settings.margin_top }}px {{ section.settings.margin_x }}px {{ section.settings.margin_bottom }}px {{ section.settings.margin_x }}px;">


{% schema %}
{
  "name": "Section Spacer",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin Bottom",
      "default": 36
    },
    {
      "type": "range",
      "id": "margin_x",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Margin X Axis",
      "default": 36
    },
    {
      "type": "color",
      "id": "divider_color",
      "label": "Divider Color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Default Section Spacer",
      "category": "Custom",
      "settings": {
        "margin_top": 20,
        "margin_bottom": 20,
        "margin_x": 20,
        "divider_color": "#000000"
      }
    }
  ]
}

{% endschema %}

